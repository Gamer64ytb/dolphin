<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/game_id"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:background="@color/dolphin_blue"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/code_content"
        android:hint="@string/ini_editor_text"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:scrollbars="horizontal|vertical"
        android:textSize="14sp"
        android:gravity="top|start"
        android:typeface="monospace"
        android:inputType="textMultiLine"
        android:layout_below="@id/game_id" />

    <Button
        android:text="@string/save"
        android:textColor="@android:color/white"
        android:id="@+id/button_save_ini_file"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/code_content"
        android:background="@drawable/button_gradient"
        android:stateListAnimator="@null"/>

</RelativeLayout>